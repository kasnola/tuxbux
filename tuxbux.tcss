# https://textual.textualize.io/guide/styles/

Screen {
	layout: horizontal;
}

.box {
	height: 100%;
	width: 1fr;
	border: solid green;
	&#shop {
		border: solid red;
	}
}

.purchasable {
	height: 7;
	background: $boost;
	margin: 1;
	padding: 0;
	align-vertical: middle;
	.label {
		height: 100%;
		width: 80%;
		align: left top;
	}
	.button {
		height: 80%;
		text-align: center;
		content-align: right middle;
		&.buy {
			background: $success-muted;
		}
	}
}

